<h1>Users#portfolio</h1>
<div class="search-area mt-5">
  <h3>Search Stocks</h3>
  <%= form_with(url: search_stock_path, method: :get, local: false) do |f|%>
      <div class="form-group row">
        <div class="col-sm-9 pe-0">
          <%= f.text_field :stock, placeholder: "Enter stock", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 ps-0">
          <%= f.button class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
  <% end %>
  
  <div id="results" class="mt-3">
  </div>

  <%= render partial: 'portfolio_table' %>
</div>