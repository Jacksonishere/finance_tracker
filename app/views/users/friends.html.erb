<div class="search-area mt-5">
  <h2>Search People</h2>
  <%= form_with(url: search_person_path, method: :get, local: false) do |f|%>
      <div class="form-group row">
        <div class="col-sm-9 pe-0">
          <%= f.text_field :person, placeholder: "Enter a name or email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 ps-0">
          <%= f.button class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
  <% end %>
  
  <div id="friend-results" class="mt-3 mb-3">
  </div>

  <% if @friends.count > 0 %>
    <h2>Following</h2>
    <%= render partial: 'friends_table' %>
  <% end %>
</div>